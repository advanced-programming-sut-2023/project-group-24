<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import model.modelview.PasswordInput?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.controls.login.LoginMenuController"
            stylesheets="@../../CSS/login.css"
            fx:id="mainPane"
            prefHeight="500.0" prefWidth="500.0">
    <left>
        <VBox spacing="20" styleClass="pane">
            <TextField promptText="username" minHeight="50" maxWidth="200" minWidth="200" alignment="CENTER"
                       fx:id="usernameField"/>
            <PasswordInput prefHeight="50" fx:id="passwordInput"/>
            <Hyperlink text="I don't have an account" onMouseClicked="#register" styleClass="hyperlink"
                       fx:id="register"/>
            <Hyperlink text="I forgot my password" onMouseClicked="#forgotPassword" fx:id="forgotPassword"/>
        </VBox>
    </left>

    <right>
        <VBox alignment="TOP_RIGHT" spacing="20" prefHeight="500">
            <ImageView fitHeight="50" fitWidth="200" fx:id="captchaImage"/>
            <HBox alignment="CENTER_RIGHT">
                <TextField promptText="captcha" minHeight="50" maxWidth="160" alignment="CENTER" fx:id="captchaField"/>
                <Button prefHeight="40" prefWidth="40" onMouseClicked="#anotherCaptcha"/>
            </HBox>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="600">
                <Button text="login" prefWidth="300" prefHeight="75" onMouseClicked="#login"/>
            </VBox>
        </VBox>
    </right>

    <padding>
        <Insets right="25" left="25" top="25" bottom="25"/>
    </padding>

</BorderPane>
