<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.controls.profile.ChooseAvatarMenuController"
            prefHeight="300.0" prefWidth="250.0" maxHeight="300">
    <left>
        <ScrollPane>
            <VBox/>
        </ScrollPane>
    </left>

    <right>
        <ScrollPane>
            <VBox/>
        </ScrollPane>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button prefWidth="100" prefHeight="50" onMouseClicked="#copyMenu"/>
            <Button prefWidth="100" prefHeight="50" onMouseClicked="#confirm"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="15" right="15" left="15" bottom="15"/>
    </padding>
</BorderPane>
